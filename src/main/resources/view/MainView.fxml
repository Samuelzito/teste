<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.Livraria.controller.LivroController">
    <TableView fx:id="tabelaLivros" prefHeight="409.0" prefWidth="1261.0">
        <columns>
            <TableColumn fx:id="colunaTitulo" text="Título" />
            <TableColumn fx:id="colunaAutor" text="Autor" />
            <TableColumn fx:id="colunaAno" prefWidth="114.0" text="Ano de Publicação" />
            <TableColumn fx:id="colunaGenero" prefWidth="46.0" text="Gênero" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" prefHeight="130.0" prefWidth="1519.0" spacing="10">
        <Button fx:id="btnExcluir" onAction="#excluirLivro" text="Excluir" />
        <Button fx:id="btnListar" onAction="#listarLivros" text="Listar" />
        <TextField fx:id="campoTitulo" promptText="Título" />
        <TextField fx:id="campoAutor" promptText="Autor" />
        <TextField fx:id="campoAno" promptText="Ano de Publicação" />
        <TextField fx:id="campoGenero" promptText="Gênero" />
        <Button fx:id="btnCadastrar" onAction="#cadastrarLivro" text="Cadastrar" />
        <Button fx:id="btnAtualizar" onAction="#atualizarLivro" text="Atualizar" />
    </HBox>
</VBox>
